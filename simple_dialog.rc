#include <windows.h>
#include "resource.h"

// Диалог записи значения
IDD_WRITE_DIALOG DIALOGEX 0, 0, 300, 200
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Write Tag Value"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Select Tag:", -1, 20, 20, 60, 20
    COMBOBOX        IDC_TAG_COMBO, 90, 20, 180, 100, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    
    LTEXT           "Current Value:", -1, 20, 50, 70, 20
    EDITTEXT        IDC_CURRENT_VALUE, 90, 50, 80, 20, ES_READONLY
    
    LTEXT           "Unit:", -1, 180, 50, 30, 20
    LTEXT           "", IDC_TAG_UNIT, 220, 50, 50, 20
    
    LTEXT           "New Value:", -1, 20, 80, 70, 20
    EDITTEXT        IDC_NEW_VALUE, 90, 80, 80, 20, ES_NUMBER | ES_AUTOHSCROLL | WS_TABSTOP
    
    PUSHBUTTON      "Write", IDC_WRITE_BUTTON, 180, 80, 60, 25
    DEFPUSHBUTTON   "Close", IDOK, 180, 120, 60, 25
    
    LTEXT           "Status:", -1, 20, 150, 40, 20
    LTEXT           "", IDC_STATUS, 70, 150, 200, 20
END

// Диалог подключения
IDD_CONNECT_DIALOG DIALOGEX 0, 0, 320, 150
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Connect to OPC UA Server"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Server URL:", -1, 20, 25, 60, 20
    EDITTEXT        IDC_SERVER_URL, 90, 25, 200, 20, ES_AUTOHSCROLL | WS_TABSTOP
    
    LTEXT           "Example: opc.tcp://localhost:4840", -1, 90, 45, 200, 15
    
    PUSHBUTTON      "Connect", IDOK, 90, 80, 80, 25
    PUSHBUTTON      "Cancel", IDCANCEL, 180, 80, 80, 25
END

// Диалог добавления тега
IDD_ADD_TAG_DIALOG DIALOGEX 0, 0, 350, 220
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Add New Tag"
FONT 9, "Segoe UI"
BEGIN
    LTEXT           "Tag Name:", -1, 20, 25, 60, 20
    EDITTEXT        IDC_TAG_NAME, 90, 25, 200, 20, ES_AUTOHSCROLL | WS_TABSTOP
    
    LTEXT           "Node ID:", -1, 20, 55, 60, 20
    EDITTEXT        IDC_NODE_ID, 90, 55, 200, 20, ES_AUTOHSCROLL | WS_TABSTOP
    LTEXT           "Example: ns=2;i=2", -1, 90, 75, 100, 15
    
    LTEXT           "Unit:", -1, 20, 95, 60, 20
    EDITTEXT        IDC_UNIT, 90, 95, 80, 20, ES_AUTOHSCROLL | WS_TABSTOP
    
    LTEXT           "Min Value:", -1, 20, 125, 60, 20
    EDITTEXT        IDC_MIN_VAL, 90, 125, 80, 20, ES_NUMBER | WS_TABSTOP
    
    LTEXT           "Max Value:", -1, 180, 125, 60, 20
    EDITTEXT        IDC_MAX_VAL, 250, 125, 80, 20, ES_NUMBER | WS_TABSTOP
    
    PUSHBUTTON      "Add", IDOK, 90, 160, 80, 25
    PUSHBUTTON      "Cancel", IDCANCEL, 180, 160, 80, 25
END

// Диалог графика
IDD_GRAPH_DIALOG DIALOGEX 0, 0, 600, 400
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU | WS_THICKFRAME
CAPTION "Tag History Graph"
FONT 9, "Segoe UI"
BEGIN
    CONTROL         "", IDC_GRAPH_AREA, "Static", SS_BLACKFRAME, 10, 10, 580, 350
    
    LTEXT           "Tag: ", -1, 20, 370, 30, 20
    LTEXT           "", IDC_GRAPH_TAG, 50, 370, 100, 20
    
    LTEXT           "Points: ", -1, 160, 370, 40, 20
    LTEXT           "", IDC_POINT_COUNT, 200, 370, 50, 20
    
    PUSHBUTTON      "Close", IDOK, 500, 370, 80, 25
END

